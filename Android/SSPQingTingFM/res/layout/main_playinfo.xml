<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="fill_parent"    android:layout_height="fill_parent"    android:baselineAligned="false"    android:orientation="horizontal" >    <RelativeLayout        android:layout_width="wrap_content"        android:layout_height="fill_parent"        android:layout_weight="7" >        <ListView            android:id="@+id/lv_playinfo"            android:layout_width="wrap_content"            android:layout_height="fill_parent"            android:divider="@drawable/bg_line"            android:scrollbars="vertical" />    </RelativeLayout>    <RelativeLayout        android:layout_width="fill_parent"        android:layout_height="fill_parent"        android:layout_weight="2.5" >        <LinearLayout             android:id="@+id/playinfo_info_top"            android:layout_width="fill_parent"            android:layout_height="wrap_content"            android:paddingLeft="52dp"            android:orientation="horizontal">        <ImageView             android:layout_width="60dp"            android:layout_height="60dp"            android:layout_gravity="center_vertical"            android:background="@drawable/icon_qingting"            />        <TextView             android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="蜻蜓FM"            android:textColor="#8aa5ba"            android:layout_marginLeft="10dp"            android:layout_gravity="center_vertical"            android:textSize="24sp"            />        </LinearLayout>        <LinearLayout             android:layout_below="@id/playinfo_info_top"            android:layout_width="fill_parent"            android:orientation="horizontal"            android:layout_height="fill_parent">            <LinearLayout                android:layout_width="fill_parent"                android:layout_height="fill_parent"                android:layout_weight="1"                android:layout_marginTop="10dp"                android:orientation="vertical" >                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_horizontal"                    android:background="@drawable/yuanpan" />                <SeekBar                    android:id="@+id/play_seekbar"                    android:layout_width="200dp"                    android:layout_height="15dp"                    android:layout_gravity="center_horizontal"                    android:clickable="false"                    android:focusable="false"                    android:longClickable="false"                    android:minWidth="200dp"                    android:progress="-5"                    android:thumb="@null"                    android:progressDrawable="@drawable/player_seek"                    android:thumbOffset="0dip"                     />            </LinearLayout>        <LinearLayout             android:layout_width="fill_parent"            android:layout_height="fill_parent"            android:layout_weight="1.2"            android:layout_marginTop="10dp"            android:orientation="vertical"            >            <TextView             android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="倾听"            android:textColor="#8aa5ba"            android:layout_gravity="center_vertical"            android:textSize="24sp"            />            <TextView             android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="世界的声音"            android:textColor="#8aa5ba"            android:layout_marginTop="10dp"            android:layout_gravity="center_vertical"            android:textSize="24sp"            />            <LinearLayout                android:layout_width="fill_parent"                android:layout_height="wrap_content"                android:layout_marginTop="100dp"                android:orientation="horizontal" >                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginTop="10dp"                    android:text="02:41"                    android:textColor="#df3133"                    android:textSize="26sp" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginTop="10dp"                    android:text="|"                    android:textColor="#8aa5ba"                    android:layout_marginLeft="5dp"                    android:layout_marginRight="5dp"                    android:textSize="26sp" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginTop="10dp"                    android:text="05:34"                    android:textColor="#8aa5ba"                    android:textSize="26sp" />            </LinearLayout>        </LinearLayout>        </LinearLayout>    </RelativeLayout></LinearLayout>